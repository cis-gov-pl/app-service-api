#!/bin/bash

# Test clean test job execution with options from option set. Simulate full quota.

PORT=5009
ROOT="$TEXTTEST_ROOT/../.."

type -t module > /dev/null 2>&1
if [[ $? == 0 ]]
then
    module load python-tools
fi

# Start server
$ROOT/AppServer/cisapps start
# Start gateway
(setsid $ROOT/AppGateway/cisappg $PORT > CISAppGateway.log 2>&1) &
GATEPID=$!

sleep 5

# Submit job
# Use the default options
ID=$(curl -s -S -X POST -H "Content-type: application/json" http://localhost:$PORT/submit -d \
    '{"service":"Test", "api":"2.0"}')
# Expect Waiting
echo -n "Job1: "
curl -s -S http://localhost:$PORT/status/$ID
echo ""

sleep 2

# Submit job
# Use the default options
ID2=$(curl -s -S -X POST -H "Content-type: application/json" http://localhost:$PORT/submit -d \
    '{"service":"Test", "api":"2.0"}')
# Expect Waiting
echo -n "Job2: "
curl -s -S http://localhost:$PORT/status/$ID2
echo ""

sleep 2

# Submit job
# Use the default options
ID3=$(curl -s -S -X POST -H "Content-type: application/json" http://localhost:$PORT/submit -d \
    '{"service":"Test", "api":"2.0"}')
# Expect Waiting
echo -n "Job3: "
curl -s -S http://localhost:$PORT/status/$ID3
echo ""

sleep 15

# Expect Running
echo -n "Job1: "
curl -s -S http://localhost:$PORT/status/$ID
echo ""
# Expect Waiting
echo -n "Job2: "
curl -s -S http://localhost:$PORT/status/$ID2
echo ""
# Expect Waiting
echo -n "Job3: "
curl -s -S http://localhost:$PORT/status/$ID3
echo ""

sleep 30

# Expect Done
echo -n "Job1: "
curl -s -S http://localhost:$PORT/status/$ID
echo ""
# Expect Running
echo -n "Job2: "
curl -s -S http://localhost:$PORT/status/$ID2
echo ""
# Expect Waiting
echo -n "Job3: "
curl -s -S http://localhost:$PORT/status/$ID3
echo ""

sleep 30

# Expect Done
echo -n "Job1: "
curl -s -S http://localhost:$PORT/status/$ID
echo ""
# Expect Done
echo -n "Job2: "
curl -s -S http://localhost:$PORT/status/$ID2
echo ""
# Expect Waiting
echo -n "Job3: "
curl -s -S http://localhost:$PORT/status/$ID3
echo ""

sleep 150

# Expect Missing
echo -n "Job1: "
curl -s -S http://localhost:$PORT/status/$ID
echo ""
# Expect Missing
echo -n "Job2: "
curl -s -S http://localhost:$PORT/status/$ID2
echo ""
# Expect Done
echo -n "Job3: "
curl -s -S http://localhost:$PORT/status/$ID3
echo ""

# Stop server
$ROOT/AppServer/cisapps terminate
# Stop gateway
kill -TERM -$GATEPID

sleep 3
